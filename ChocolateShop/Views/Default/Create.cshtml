@model ChocolateShop.entity.Chocolate

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create","Default",FormMethod.Post))
{
<table>
    <tr>
        <td>Name :</td>
        <td>@Html.TextBoxFor(Model => Model.Name)</td>
    </tr>
    <tr>
        <td>Price :</td>
        <td>@Html.TextBoxFor(Model => Model.Price)</td>
    </tr>
    <tr>
        <td>Protein :</td>
        <td>@Html.TextBoxFor(Model => Model.Protein)</td>
    </tr>
    <tr>
        <td>
            <input type="submit"/>
        </td>
        <td>
            <a href="Index">Back</a>
        </td>
    </tr>
</table>
}