@model Account.entity.Account

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<table border="1">
    <tr>
        <td>Enter Username :</td>
        <td>@Html.TextBoxFor(Model => Model.Name)</td>
    </tr>
    <tr>
        <td>Enter Password :</td>
        <td>@Html.TextBoxFor(Model => Model.Password)</td>
    </tr>
    <tr>
        <td>
            <input type="button" value="Login" />
        </td>
    </tr>

</table>
